{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "types": ["vite/client", "node"],
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "jsx": "preserve",
        "resolveJsonModule": true,

        // New options
        "outDir": "./dist", // Output directory for compiled files
        "rootDir": "./resources/js", // Root directory for your source files
        "baseUrl": ".", // Base directory for non-relative imports
        "paths": {
            "@/*": ["resources/js/*"] // Alias for easier imports
        }
    },
    "include": ["resources/js/**/*", "router"],
    "exclude": [
        "node_modules",
        "dist" // Exclude the output directory
    ]
}
